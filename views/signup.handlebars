<form id="signup-form">
    <div class="signup">
        <h3>Sign Up</h3>
        <div>
            <label for="username-signup">Username</label>
            <input id="username-signup" type="text" />
        </div>

        <div>
            <label for="email-signup" class="form-label">Email</label>
            <input id="email-signup" type="text" />
        </div>

        <div>
            <label class="form-label" for="password-signup">Password</label>
            <input id="password-signup" type="password" />
        </div>

        <div class="button">
            <button type="submit">Signup!</button>
        </div>

        <a class="login-link" href="/login">Need to Log In?</a>
    </div>
</form>

<script src="/js/signup.js"></script>